{
  "env": {
    "IS_DEMO": "1"
  },
  "model": "sonnet",
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/completion-notify/notify-completion.sh"
          },
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/executable_require-code-review-fixes.sh"
          },
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/executable_require-review-thread-fixes.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/executable_code-review-immediate-fix.sh"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/completion-notify/notify-permission-request.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/completion-notify/notify-notification.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/completion-notify/notify-user-prompt-submit.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "claude-code-wakatime@wakatime": true,
    "context7@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "serena@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "ask-codex@hiropon-plugins": true,
    "ask-gemini@hiropon-plugins": true,
    "ask-copilot@hiropon-plugins": true
  },
  "extraKnownMarketplaces": {
    "hiropon-plugins": {
      "source": {
        "source": "github",
        "repo": "hiroro-work/claude-plugins"
      }
    },
    "wakatime": {
      "source": {
        "source": "github",
        "repo": "wakatime/claude-code-wakatime"
      }
    }
  }
}
