# 注意！このファイルはインターフェースで設定が変更されるとhtopによって書き換えられます。
# パーサーは非常に原始的であり、人間にとって読みやすいものではありません。
# プロセスリストの列（セットアップ画面の「Available Columns」で設定。ここの順序が表示順序です）。
fields=0 48 17 18 38 39 40 2 46 47 49 1

# リストビューのソートに使用される列（--sort-keyと同じ概念）。
sort_key=46

# リストビューのソート方向（htopは対話的にソート順を反転できます）。
sort_direction=-1

# ツリービューが有効な場合のソートに使用される列。
tree_sort_key=46

# ツリービューのソート方向（htopは対話的にソート順を反転できます）。
tree_sort_direction=-1

# プロセスリストでカーネルスレッドを隠す。
hide_kernel_threads=1

# プロセスリストでユーザーランドスレッドを隠す。
hide_userland_threads=0

# 他のユーザーが所有するプロセスを薄暗く表示する（シャドウ）。
shadow_other_users=0

# 可能であればプロセスリストにスレッド名を表示する。
show_thread_names=0

# 実行中のプログラムへのフルパスを表示する（トグルキー: p）。
show_program_path=1

# 設定されている場合、Command列でプログラムのベース名をハイライトする。
highlight_base_name=0

# UIでメモリサイズ（MiB/GiB）をハイライトする。
highlight_megabytes=1

# プロセスリストでスレッドをハイライトする。
highlight_threads=1

# 新旧のプロセスをハイライトする（--highlight-changesと同様）。
highlight_changes=0

# プロセスの変更がハイライトされたままになる遅延時間（秒）。
highlight_changes_delay_secs=5

# コマンドラインを表示/操作する際に、その中のコマンド名を見つける。
find_comm_in_cmdline=1

# コマンドラインを表示する際に、実行ファイルのパスを取り除く。
strip_exe_from_cmdline=1

# exe、comm、cmdlineをCommand列にマージする（トグルキー: m）。
show_merged_command=0

# ツリービューでプロセスを表示する（トグルキー: t / F5）。
tree_view=0

# ツリービューを常にPID階層でソートする。
tree_view_always_by_pid=0

# ヘッダーとプロセスリストの間にマージン（余白）を追加する。
header_margin=1

# プロセスリストに詳細なCPU時間を表示する。
detailed_cpu_time=0

# CPU番号を0ではなく1から開始する。
cpu_count_from_one=0

# ヘッダーメーターにCPU使用率を表示する。
show_cpu_usage=1

# ヘッダーメーターにCPU周波数を表示する（利用可能な場合）。
show_cpu_frequency=0

# ヘッダーメーターにCPU温度を表示する（センサーのサポートが必要）。
show_cpu_temperature=0

# 温度に華氏を使用する（0 = 摂氏）。
degree_fahrenheit=0

# 時間の経過とともにプロセス名を更新する（変更された場合など）。
update_process_names=0

# CPUメーターにゲスト時間を含める。
account_guest_in_cpu_meter=0

# カラースキームのインデックス（セットアップで選択可能）。
color_scheme=0

# マウスサポートを有効にする（--no-mouseで無効化）。
enable_mouse=1

# 更新間の遅延時間（10分の1秒単位）。15 = 1.5秒。
delay=15

# 左側のヘッダーメーター（セットアップで選択された名前）。
left_meters=LeftCPUs Memory Swap

# 左側メーターの表示モード（モード番号に応じてバー/テキスト/LED）。
left_meter_modes=1 1 1

# 右側のヘッダーメーター（セットアップで選択された名前）。
right_meters=RightCPUs Tasks LoadAverage Uptime

# 右側メーターの表示モード（モード番号に応じてバー/テキスト/LED）。
right_meter_modes=1 2 2 2

# 下部のファンクションキーバーを隠す。
hide_function_bar=0